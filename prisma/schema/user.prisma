model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  phone         String?      @unique
  image         String?
  password      String?      // optional
  role          UserRole     @default(CUSTOMER)
  provider      AuthProvider @default(LOCAL)
  providerId    String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([providerId])
  @@map("users")
}